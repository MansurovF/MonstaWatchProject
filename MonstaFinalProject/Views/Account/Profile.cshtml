@model ProfileVM
@{
    ViewData["Title"] = "Profile";
}

<div style="margin: 8rem 0 0 19rem;
    padding-bottom: 22rem;" class="row">
    <div class="col-lg-12">
        <div class="row justify-content-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Brand Create Page</h1>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <h5>Password Change</h5>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="RepeatPassword"></label>
                    <input asp-for="RepeatPassword" class="form-control" />
                    <span asp-validation-for="RepeatPassword" class="text text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

