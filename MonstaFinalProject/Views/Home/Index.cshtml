                </div>
                <div class="item3">
                    <button type="button" class="slider-button" data-slide="2">
                        <a>
                            <span>Onsale</span>
                        </a>
                    </button>
                </div>
            </div>
            <div class="slider-content active">
                @await Html.PartialAsync("_ProductListPartial",Model.Featured)
            </div>
            <div class="slider-content">
                @await Html.PartialAsync("_ProductListPartial",Model.BestSelling)
            </div>
            <div class="slider-content">
                @await Html.PartialAsync("_ProductListPartial",Model.Onsale)
