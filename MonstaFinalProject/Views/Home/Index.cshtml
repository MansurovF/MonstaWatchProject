@model HomeVM

<section id="Slider">
    <div class="swiper">
        <div class="swiper-wrapper">
            @foreach (Slider slider in Model.Sliders)
            {
                <div class="swiper-slide" style="background-image: url(/assets/images/@slider.Image);">
                    <div class="text-div">
                        <span>@slider.Title</span>
                        <h1>@slider.description</h1>
                        <p>Pre-Baselworld 2018 – Jaquet Droz Grande Seconde</p>

                        <p class="specialp">Starting at <span>$1.699.00</span> </p>
                        <a href="@slider.Link">SHOPPING NOW</a>
