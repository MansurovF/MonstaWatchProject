@model Category
@{
    ViewData["Title"] = "Detail";
    int count = 0;
    int childcount = 0;
}

<div style="margin-left: 17rem;margin-top: 7rem;padding-bottom: 27rem;" class="row">
    <div class="col-lg-12">
        <div class="row d-flex justify-content-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Brand Detail Page</h1>
            </div>
            <div class="col-lg-2 " style="text-align:end">
                <a asp-action="index" asp-controller="category" asp-area="boss" class="btn btn-primary">Go To Home</a>
            </div>
        </div>
    </div>
    @if (Model.Children != null && Model.Children.Count() > 0)
    {
        <div class="col-lg-12">
            <div class="col-lg-12">
                <table class="table table-bordered table-stripped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Created At</th>
                            <th>Created By</th>
                            <th>Product Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category category in Model.Children)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@category.Name</td>
                                <td>@category.CreatedAt.ToString("dd-MMM-yyyy").ToUpper()</td>
                                <td>@category.CreatedBy</td>
                                <td>@category.Products?.Count()</td>
                                <td>
                                    <a asp-area="boss" asp-controller="Category" asp-action="Detail" asp-route-id="@category.Id" class="btn btn-primary">Detail</a>
                                    <a asp-area="boss" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning " style="margin:0 5px;">Update</a>
                                    <a asp-area="boss" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger ">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    @if (Model.Products != null && Model.Products.Count() > 0)
    {
        <div class="col-lg-12">
            <table class="table table-bordered table-stripped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Created By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in Model.Products)
                    {
                        childcount++;
                        <tr>
                            <td>@count</td>
                            <td>@product.Title</td>
                            <td>@product.CreatedAt.ToString("dd-MMM-yyyy").ToUpper()</td>
                            <td>@product.CreatedBy</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

