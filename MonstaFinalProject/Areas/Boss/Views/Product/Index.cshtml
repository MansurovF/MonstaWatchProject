@model PageNatedList<Product>
@{
    ViewData["Title"] = "Index";
    int count = (Model.PageIndex - 1) * 3;
}

<div style="margin-left: 17rem;margin-top: 7rem;padding-bottom: 27rem;" class="row">
    <div class="col-lg-12">
        <div class="row d-flex justify-content-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Product Page</h1>
            </div>
            <div class="col-lg-2 " style="text-align:end">
                <a asp-action="create" asp-controller="Product" asp-area="boss" class="btn btn-primary">Create</a>
            </div>
        </div>
    </div>
    <div class="category-index">
        @await Html.PartialAsync("_ProductIndexPartial",Model)
    </div>
</div>

