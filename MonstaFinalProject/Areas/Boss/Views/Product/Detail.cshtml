@model Product
@{
    ViewData["Title"] = "Detail";
    //int count = (Model.PageIndex - 1) * 3;
}

<div style="margin-left: 17rem;margin-top: 7rem;padding-bottom: 27rem;" class="row">
    <div class="col-lg-12">
        <div class="row d-flex justify-content-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Product Page</h1>
            </div>
            <div class="col-lg-2 " style="text-align:end">
                <a asp-action="index" asp-controller="product" asp-area="boss" class="btn btn-primary">Go To Home</a>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="col-lg-12">
            <table class="table table-bordered table-stripped">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Brand</th>
                        <th>Color</th>
                        <th>Created At</th>
                        <th>Created By</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                 
                        <tr>
                            <td>
                            <img style="width:100px;height:100px;" src="~/assets/image/products/@Model.MainImage" />
                            </td>
                            <td>@Model.Title</td>
                        <td>@Model.Category?.Name</td>
                        <td>@Model.Brand?.Name</td>
                        <td>@Model.Color?.Name</td>
                        <td>@Model.CreatedAt.ToString("dd-MMM-yyyy").ToUpper()</td>
                        <td>@Model.CreatedBy</td>
                            
                        </tr>
                    
                </tbody>
            </table>
        </div>
    </div>
