@model Color
@{
    ViewData["Title"] = "Delete";
    int count = 0;
}

<div style="margin-left: 17rem;margin-top: 7rem;padding-bottom: 27rem;" class="row">
    <div class="col-lg-12">
        <div class="row d-flex justify-content-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Brand Detail Page</h1>
            </div>
            <div class="col-lg-2 " style="text-align:end">
                <a asp-area="boss" asp-controller="color" asp-action="index" class="btn btn-primary">Go To Home</a>
            </div>
            <div class="col-lg-2 " style="text-align:end">
                <a asp-area="boss" asp-controller="color" asp-action="deletecolor" asp-route-id="@Model.Id" class="btn btn-danger">Remove</a>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="row d-flex justify-content-between">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="..." alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Color Name: @Model.Name</h5>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Products != null && Model.Products.Count() > 0)
    {
        <div class="col-lg-12">
            <table class="table table-bordered table-stripped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Created By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in Model.Products)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@product.Title</td>
                            <td>@product.CreatedAt.ToString("dd-MMM-yyyy").ToUpper()</td>
                            <td>@product.CreatedBy</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

