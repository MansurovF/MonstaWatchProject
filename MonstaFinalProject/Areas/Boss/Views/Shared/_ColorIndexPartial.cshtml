@model IEnumerable<Color>
@{
    int count = 0;
}
<div class="col-lg-12">
    <table class="table table-bordered table-stripped">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Created At</th>
                <th>Created By</th>
                <th>Product Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Color color in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@color.Name</td>
                    <td>@color.CreatedAt.ToString("dd-MMM-yyyy").ToUpper()</td>
                    <td>@color.CreatedBy</td>
                    <td>@color.Products?.Count()</td>
                    <td>
                        <a asp-area="boss" asp-controller="color" asp-action="Detail" asp-route-id="@color.Id" class="btn btn-primary">Detail</a>
                        <a asp-area="boss" asp-controller="color" asp-action="Update" asp-route-id="@color.Id" class="btn btn-warning " style="margin:0 5px;">Update</a>
                        <a asp-area="boss" asp-controller="color" asp-action="Delete" asp-route-id="@color.Id" class="btn btn-danger deleteBtn">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>