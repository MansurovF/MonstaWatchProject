@model List<ProductImage>

@foreach (ProductImage productImage in Model)
{
    <div>
        <div>
            <img style="width:100px;" src="~/assets/image/@productImage.Image" />
        </div>
        @if (Model.Count > 1)
        {
            <div>
                <a style="width:10px;visibility:hidden;" asp-area="boss" asp-controller="product" asp-action="deleteimage" asp-route-id="@productImage.ProductId" asp-route-imageId="@productImage.Id" class="btn btn-danger deleteImage">Delete</a>
            </div>
        }
    </div>



}